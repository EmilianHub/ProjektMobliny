<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektMobliny.Views.PowiadomieniaDetailPage"
             BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDark}, Light={StaticResource Background}}">

    <StackLayout Spacing="10" Padding="5">
        <Label Text="Nagłówek:" TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" FontSize="Medium" />
        <Label Text="{Binding Text}" TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" FontSize="Small"/>
        <Label Text="Opis:" TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" FontSize="Medium" />
        <Label Text="{Binding Description}" TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" FontSize="Small"/>
        <Label Text="Data:" TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" FontSize="Medium" />
        <Label Text="{Binding Czas}" TextColor="{AppThemeBinding Dark={StaticResource TextColorDark}, Light={StaticResource TextColor}}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>