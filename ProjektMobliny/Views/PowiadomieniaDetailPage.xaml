<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektMobliny.Views.PowiadomieniaDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="10" Padding="5">
        <Label Text="Nagłówek:" TextColor="Black" FontSize="Medium" />
        <Label Text="{Binding Text}" TextColor="Black" FontSize="Small"/>
        <Label Text="Opis:" TextColor="Black" FontSize="Medium" />
        <Label Text="{Binding Description}" TextColor="Black" FontSize="Small"/>
        <Label Text="Data:" TextColor="Black" FontSize="Medium" />
        <Label Text="{Binding Czas}" TextColor="Black" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>